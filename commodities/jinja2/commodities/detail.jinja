{% extends "layouts/layout.jinja" %}

{% from "components/tabs/macro.njk" import govukTabs %}
{% from "components/summary-list/macro.njk" import govukSummaryList %}
{% from "components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "components/table/macro.njk" import govukTable %}

{% set page_title = "Commodity: " ~ object.item_id %}

{% set core_data_tab_html %}{% include "includes/commodities/tabs/core_data.jinja" %}{% endset %}
{% set measures_tab_html %}{% include "includes/commodities/tabs/measures.jinja" %}{% endset %}
{% set version_control_tab_html %}{% include "includes/common/tabs/version_control.jinja" %}{% endset %}

{% block breadcrumb %}
  {{ govukBreadcrumbs({
    "items": [
      {"text": "Home", "href": url("home")},
      {"text": "Find commodity codes", "href": url("commodity-ui-list")},
      {"text": page_title}
    ]
  }) }}
{% endblock %}

{% set tabs = {
    "items": [
      {
        "label": "Details",
        "id": "core-data",
        "panel": {
          "html": core_data_tab_html
        }
      },
      {
        "label": "Measures as defined",
        "id": "measures",
        "panel": {
          "html": measures_tab_html
        }
      },
      {
        "label": "Version control",
        "id": "version-control",
        "panel": {
          "html": version_control_tab_html
        }
      },
    ]
  }
%}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ page_title }}</h1>
    </div>
  </div>
  {{ govukTabs(tabs) }}
{% endblock %}

