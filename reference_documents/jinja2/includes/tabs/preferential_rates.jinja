<div class="quota__core-data govuk-grid-row">
    <div class="quota__core-data__content govuk-grid-column-three-quarters">
        {{ govukTable({
        "head": reference_document_version_duties_headers,
        "rows": reference_document_version_duties
        }) }}
    </div>

