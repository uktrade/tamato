{% extends "layouts/detail.jinja" -%}

{% from "macros/fake_tabs.jinja" import fake_tabs %}
{% from "components/table/macro.njk" import govukTable %}
{% set page_title = "Footnote: " ~ object|string %}

{% set links = [
    {
      "text": "Details",
      "href": url('footnote-ui-detail', kwargs={"footnote_type__footnote_type_id":object.footnote_type.footnote_type_id, "footnote_id":object.footnote_id}),
      "selected": selected_tab == "details"
    },
    {
      "text": "Descriptions",
      "href": url('footnote-ui-detail-descriptions', kwargs={"footnote_type__footnote_type_id":object.footnote_type.footnote_type_id, "footnote_id":object.footnote_id}),
      "selected": selected_tab == "descriptions",
    },
    {
      "text": "Version control",
      "href": url('footnote-ui-detail-version-control', kwargs={"footnote_type__footnote_type_id":object.footnote_type.footnote_type_id, "footnote_id":object.footnote_id}),
      "selected": selected_tab == "version-control"
    },
  ]
%}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ page_title }}</h1>
    </div>
  </div>
  {{ fake_tabs(links) }}
  <div class="govuk-tabs__panel {% block content_class %}{% endblock %}">
    {% block tab_content %}
      {% include "includes/footnotes/tabs/core_data.jinja" %}
    {% endblock %}
  </div>
{% endblock %}

