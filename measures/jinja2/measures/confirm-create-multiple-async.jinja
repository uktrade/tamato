{% extends "layouts/confirm.jinja" %}
{% from "components/breadcrumbs.jinja" import breadcrumbs %}

{% set page_title = "Confirmation" %}

{% macro panel_title(created_measures) %}
  You successfully submitted {{ created_measures|length }} measure{{ created_measures|pluralize}} to be created or edited on TAP.
{% endmacro %}

{% macro panel_subtitle(created_measures) %}
  You can view {% if created_measures|length > 1 %}their{% else %}its{% endif %} status on the Measures process queue page.
{% endmacro %}

{% block breadcrumb %}
  {{ breadcrumbs(request,
    [
      {"text": page_title}
    ]
  ) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukPanel({
        "titleText": panel_title(created_measures),
        "text": panel_subtitle(created_measures),
        "classes": "govuk-!-margin-bottom-7"
      }) }}
      <div class="govuk-button-group">
        {{ govukButton({
          "text": "View status",
          "classes": "govuk-button--primary"
        }) }}
        {{ govukButton({
          "text": "Homepage",
          "href": url("home"),
          "classes": "govuk-button--secondary"
        }) }}
      </div>
    </div>
  </div>
{% endblock %}
