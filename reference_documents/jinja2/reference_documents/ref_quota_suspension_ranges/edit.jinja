    {"text": "Order number " ~ object.ref_quota_definition_range.ref_order_number.order_number},
    {"text": "Quota definition template"},
    {"text": "Edit preferential quota suspension template"}
    ]
  }) }}
{% endblock %}

{% block form %}
    {% call django_form() %}
        {{ crispy(form) }}
    {% endcall %}
{% endblock %}