{% extends "commodities/detail.jinja" %}

{% block content_class %}commodity-hierarchy{% endblock %}
{% macro leaf_commodity(comm) -%}
  <div class="govuk-body comm-code-container {% if comm == this_commodity %}govuk-!-font-weight-bold{% endif %}">
    <span>{{comm.description}}</span>  <span>{{ comm_code_display(comm) }}</span>
  </div>
{% endmacro %}

{% macro comm_code_display(comm) -%}
<span class="comm-code-table-container">
  <table class="comm-code-table">
    <tr class="comm-code-table-row">
        <td class="comm-code-block"><span class="comm-code-1">{{comm.code.code[:2]}}</span></td>
        <td class="comm-code-block"><span class="comm-code-2">{{comm.code.code[2:4]}}</span></td>
        <td class="comm-code-block"><span class="comm-code-3">{{comm.code.code[4:6]}}</span></td>
        <td class="comm-code-block"><span class="comm-code-4">{{comm.code.code[6:8]}}</span></td>
        <td class="comm-code-block"><span class="comm-code-5">{{comm.code.code[8:]}}</span></td>
        <td class="comm-code-suffix">({{comm.suffix}})</td>
        <td><a class="comm-code-link govuk-link" href="{{ url('commodity-ui-detail', args=[comm.sid]) }}">View<span class="govuk-visually-hidden">{{ comm.code }}</span></td>
    </tr>
  </table>
</span>
{% endmacro %}

{% block tab_content %}

<h2 class="govuk-heading-l">Commodity hierarchy</h2>
{% if not is_current %}
  <p>This commodity has been end dated so no longer forms part of the hierarchy.</p>

{% elif snapshot.commodities|length == 1 %}
  <div class="comm-code-container">{{ leaf_commodity(snapshot.commodities[0]) }}</div>

{% else %}
  {% for comm in snapshot.commodities %}
    {% if loop.nextitem and loop.nextitem.indent > comm.indent %}
      <details class="govuk-details" data-code="{{comm.item_id}}-{{comm.suffix}}"{% if comm in snapshot.ancestors[this_commodity] %}open=""{% endif %}>
      <summary class="govuk-details__summary comm-code-container">
        
          <span class="govuk-details__summary-text {% if comm == this_commodity %}govuk-!-font-weight-bold{% endif %}">
            {{ comm.description }} <span class="comm-code-display">{{comm_code_display(comm)}}</span>
          </span>
        
      </summary>

    {% elif not loop.nextitem or loop.nextitem.indent <= comm.indent %}
      <div class="comm-code-no-children"><span class="comm-code-container">{{ leaf_commodity(comm) }}</span></div>

      {% if not loop.nextitem %}
        {% for i in range(comm.indent) %}
          </details>
        {% endfor %}
      {% else %}
        {% for i in range(comm.indent - loop.nextitem.indent) %}
          </details>
        {% endfor %}
      {% endif %}

    {% endif %}

  {% endfor %}

{% endif %}

{% endblock %}