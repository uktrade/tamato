{% macro navigation(request, active_link) %}
<nav class="workbasket-navigation govuk-!-margin-bottom-7">
    <ul class="govuk-list">
        <li class="{% if active_link == 'summary' %}active{% endif %}">
            <a href="{{ url('workbaskets:current-workbasket') }}" class="govuk-link">View summary</a>
        </li>
        <li class="{% if active_link == 'edit' %}active{% endif %}">
            <a href="{{ url('workbaskets:edit-workbasket') }}" class="govuk-link">Add/edit items</a>
        </li>
        <li class="{% if active_link == 'violations' %}active{% endif %}">
            <a href="{{ url('workbaskets:workbasket-ui-violations') }}" class="govuk-link">View violations ({{request.session.workbasket.error_count}})</a>
        </li>
        <li class="{% if active_link == 'review' %}active{% endif %}">
            <a href="{{ url('workbaskets:review-workbasket') }}" class="govuk-link">Review measures ({{request.session.workbasket.measure_count}})</a>
        </li>
        <li class="{% if active_link == 'review-goods' %}active{% endif %}">
            <a href="{{ url('workbaskets:workbasket-ui-review-goods') }}" class="govuk-link">Review goods</a>
        </li>
        <li class="{% if active_link == 'compare' %}active{% endif %}">
            <a href="{{ url('workbaskets:workbasket-ui-compare') }}" class="govuk-link">Compare data</a>
        </li>
    </ul>
</nav>
{% endmacro %}