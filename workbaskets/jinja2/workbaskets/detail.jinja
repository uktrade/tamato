{% extends "layouts/layout.jinja" %}

{% from "components/accordion/macro.njk" import govukAccordion %}
{% from "components/tabs/macro.njk" import govukTabs %}
{% from "components/input/macro.njk" import govukInput %}
{% from "components/table/macro.njk" import govukTable %}


{% set page_title = "Work basket: " ~ workbasket.title %}


{% block breadcrumb %}
  {{ govukBreadcrumbs({
    "items": [
      {"text": "Home", "href": url("index")},
      {"text": "Find and edit work baskets", "href": url("workbaskets:workbasket-ui-list")},
      {"text": page_title}
    ]
  }) }}
{% endblock %}

{% block content %}
  <h1 class="govuk-heading-xl">{{ page_title }}</h1>

  {% set detail_html %}
    <h2 class="govuk-heading-l">About this Workbasket</h2>
    {{ govukTable({
      "firstCellIsHeader": true,
      "rows": [
        [
          {"text": "Workbasket ID"},
          {"text": workbasket.pk}
        ],
        [
          {"text": "Workbasket name"},
          {"text": workbasket.title},
        ],
        [
          {"text": "Reason"},
          {"text": workbasket.reason or ""}
        ],
        [
          {"text": "Number of changes"},
          {"text": workbasket.tracked_models.count()}
        ],
        [
          {"text": "Created"},
          {"text": "{:%d %b %y %H:%M}".format(workbasket.created_at)}
        ],
        [
          {"text": "Last amended"},
          {"text": "{:%d %b %y %H:%M}".format(workbasket.updated_at)}
        ],
        [
          {"text": "Workbasket status"},
          {"text": workbasket.get_status_display()}
        ],
      ]
    }) }}
  {% endset %}

  {% set workbasket_changes %}
    {% set object_list = workbasket.tracked_models %}

    <h2 class="govuk-heading-l">Workbasket changes</h2>
    <p class="govuk-body">This workbasket contains the following {{ workbasket.tracked_models.count() }} changes:</p>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
        {% include "includes/workbaskets/workbasket-items-accordion.jinja" %}
        </div>
    </div>
  {% endset %}

  {{ govukTabs({
    "items": [
      {
        "label": "Details",
        "id": "detail",
        "panel": {
          "html": detail_html
        }
      },
      {
        "label": "Changes",
        "id": "activities",
        "panel": {
          "html": workbasket_changes
        }
      }
    ]
  }) }}
{% endblock %}
