  {{ page_title }} | {{ service_name }}
{% endblock %}

{% block header %}
  {{ govukHeader({
    "serviceName": service_name,
    "serviceUrl": "#",
    "navigation": [
      {
        "href": url("logout") if request.user.is_authenticated else url("login"),
        "text": "Sign out" if request.user.is_authenticated else "Sign In"
      }
    ]
  }) }}
{% endblock %}
{% block beforeContent %}
