{% extends "reports/layout_reports.jinja" %}

{% block breadcrumb %}
  {{ breadcrumbs(request, [
      {'text': "Reports index", "href": '/reports'},
      {"text": page_title}
    ])
  }}
{% endblock %}

{% block content %}
    <h1 class="govuk-heading-xl govuk-!-margin-bottom-3">
        Report: {{ report.name }}
    </h1>
    {% if report.export %}
      <a id="exportToCSVLink{{report.slug()}}" class="govuk-button" style="float:right;" href="{{ url("reports:export_report_to_csv", kwargs={"report_slug": report.slug()}) }}">Export to CSV</a>
    {% endif %}

    <h2 class="govuk-body">
    {{ report.description|safe }}
    </h2>
    <div>
        <p class="govuk-body">
            {{ report.text() }}
        </p>
    </div>
{% endblock %}
