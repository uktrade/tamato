{% from "components/table/macro.njk" import govukTable %}

{% macro display_assigned_users(assigned_users, assignment_type) %}
  {% if not assigned_users and assignment_type == "workers" %}
    No users have been assigned to this workbasket yet.
  {% elif not assigned_users and assignment_type == "reviewers" %}
    No users have been assigned to review this workbasket yet.
  {% else %}
    {% for user in assigned_users %}
      {{ user.get_full_name() }}{% if not loop.last %}<br> {% endif %}
    {% endfor %}
  {% endif %}
{% endmacro %}

{%- set table_rows = [] -%}
{% for workbasket in object_list %}
  {%- set workbasket_linked_pk -%}
  <form action="{{ request.path }}" method="post">
    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
    <input
      type="submit"
      class="button-link"
      name="workbasket"
      value="{{ workbasket.pk }}">
  </form>
  {%- endset -%}

  {{ table_rows.append([
    {"text": workbasket_linked_pk},
    {"text": workbasket.title},
    {"text": workbasket.reason},
    {"html": display_assigned_users(workbasket.assigned_workers, "workers") },
    {"html": display_assigned_users(workbasket.assigned_reviewers, "reviewers") },
  ]) or "" }}
{% endfor %}

{{ govukTable({
  "head": [
    {"text": "ID"},
    {"text": "TOPS/Jira number"},
    {"text": "Description"},
    {"text": "Assigned to"},
    {"text": "Assigned to review"},
  ],
  "rows": table_rows
}) }}
