{% extends "layouts/detail.jinja" %}

{% from "macros/fake_tabs.jinja" import fake_tabs %}
{% from "components/table/macro.njk" import govukTable %}
{% from "components/breadcrumbs/macro.njk" import govukBreadcrumbs %}


{% block breadcrumb %}
  {{ govukBreadcrumbs({
    "items": [
      {"text": "Home", "href": url("home")},
      {"text": "Workbasket " ~ request.user.current_workbasket.id, "href": url("workbaskets:edit-workbasket")},
      {"text": page_title}
    ]
  }) }}
{% endblock %}

{% set links = [
    {
      "text": "Auto end-date measures",
      "href": url('workbaskets:workbasket-ui-auto-end-date-measures'),
      "selected": selected_tab == "measures"
    },
    {
      "text": "Auto end-date footnote associations",
      "href": url('workbaskets:workbasket-ui-auto-end-date-footnote-associations'),
      "selected": selected_tab == "associations",
    },
  ]
%}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">Auto end objects</h1>
    </div>
  </div>
  {{ fake_tabs(links) }}
  <div class="govuk-tabs__panel {% block content_class %}{% endblock %}">
    {% block tab_content %}
      {% include "workbaskets/auto_end_date_measures.jinja" %}
    {% endblock %}
  </div>
{% endblock %}