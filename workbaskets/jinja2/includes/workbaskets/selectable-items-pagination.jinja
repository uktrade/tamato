
{% if page_obj.has_other_pages() %}
<nav class="pagination" role="navigation" aria-label="Pagination Navigation">
  <div class="govuk-body">
    Showing {{ page_obj|length }} of {{'{0:,}'.format(page_obj.paginator.count)}} changes
  </div>

  <div class="govuk-body align-left">
    Page {{page_obj.number}} of {{ '{0:,}'.format(page_obj.paginator.num_pages)}}
  </div>

  <ul class="govuk-list align-right">

    {% if page_obj.has_previous() %}
    <li>
      {{ govukButton({
        "text": "Prev",
        "classes": "govuk-button--secondary",
        "name": "form-action",
        "value": "page-prev"
      }) }}
    </li>
    {% endif %}

    {% if page_obj.has_next() %}
    <li>
      {{ govukButton({
        "text": "Next",
        "classes": "govuk-button--secondary govuk-!-margin-left-2",
        "name": "form-action",
        "value": "page-next"
      }) }}
    </li>
    {% endif %}

  </ul>
</nav>
{% endif %}
