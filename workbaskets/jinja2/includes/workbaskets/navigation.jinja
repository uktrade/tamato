{% macro navigation(request, active_link) %}
<nav class="workbasket-navigation govuk-!-margin-bottom-7">
    <ul class="govuk-list">
        <li class="{% if active_link == 'summary' %}active{% endif %}">
            <a href="{{ url('workbaskets:current-workbasket') }}" class="govuk-link">View summary</a>
        </li>
        <li class="{% if active_link == 'edit' %}active{% endif %}">
            <a href="{{ url('workbaskets:edit-workbasket') }}" class="govuk-link">Add/edit items</a>
        </li>
        <li class="{% if active_link == 'check' %}active{% endif %}">
            <a href="{{ url('workbaskets:workbasket-checks') }}" class="govuk-link">Check workbasket</a>
        </li>
        <li class="{% if active_link == 'review' %}active{% endif %}">
            <a href="{{ url('workbaskets:workbasket-ui-review-measures', args=[request.user.current_workbasket.id]) }}" class="govuk-link">Review changes</a>
        </li>
    </ul>
</nav>
{% endmacro %}

{% macro create_workbasket_detail_navigation(active_tab) %}
<nav class="workbasket-navigation govuk-!-margin-bottom-7">
  <ul class="govuk-list">
    <li class="{% if active_tab == "details" %}active{% endif %}">
      <a href="{{ url("workbaskets:workbasket-ui-detail", args=[workbasket.pk]) }}" class="govuk-link">Details</a>
    </li>
    <li class="{% if active_tab == "changes" %}active{% endif %}">
      <a href="{{ url("workbaskets:workbasket-ui-changes", args=[workbasket.pk]) }}" class="govuk-link">Changes</a>
    </li>
    <li class="{% if active_tab == "transaction-order" %}active{% endif %}">
      <a href="{{ url("workbaskets:workbasket-ui-transaction-order", args=[workbasket.pk]) }}" class="govuk-link">Transaction order</a>
    </li>
    <li class="{% if active_tab == "review" %}active{% endif %}">
      <a href="{{ url("workbaskets:workbasket-ui-review-measures", args=[workbasket.pk]) }}" class="govuk-link">Review</a>
    </li>
  </ul>
</nav>
{% endmacro %}
