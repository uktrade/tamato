{% extends "layouts/confirm.jinja" %}
{% from "components/breadcrumbs.jinja" import breadcrumbs %}

{% set page_title = object._meta.verbose_name|capitalize ~ ": "~ object|string ~ " updated" %}

{% block breadcrumb %}
  {{ breadcrumbs(request, [
      {"text": "Find and edit " ~ object._meta.verbose_name_plural, "href": object.get_url("list")},
      {"text": object._meta.verbose_name|capitalize ~ ": " ~ object|string, "href": object.get_url()},
      {"text": page_title}
    ])
  }}
{% endblock %}

{% block panel %}
  {{ govukPanel({
    "titleText": object._meta.verbose_name|capitalize ~ ": " ~ object|string,
    "text": object._meta.verbose_name|capitalize ~ ": " ~ object|string ~ " has been updated in workbasket " ~ request.user.current_workbasket.pk,
    "classes": "govuk-!-margin-bottom-7"
  }) }}
{% endblock %}
