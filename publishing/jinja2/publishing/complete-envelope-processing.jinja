{% extends "layouts/layout.jinja" %}

{% from "components/breadcrumbs/macro.njk" import govukBreadcrumbs %}

{% set page_title = accept_reject | capitalize ~ " envelope" %}

{% block breadcrumb %}
  {{ govukBreadcrumbs({
    "items": [
      {"text": "Home", "href": url("home")},
      {"text": "CDS - Process envelopes", "href": url("publishing:envelope-queue-ui-list")},
      {"text": page_title},
    ]
  }) }}
{% endblock %}

{% block content %}
  <h1 class="govuk-heading-xl">{{ page_title }}</h1>

  <h2 class="govuk-heading-m">Upload loading report and {{ accept_reject }} envelope</h1>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
    {{ form }}
    </div>
  </div>
{% endblock %}
