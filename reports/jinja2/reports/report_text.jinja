{% extends "reports/layout_reports.jinja" %}

{% block breadcrumb %}
  {{ breadcrumbs(request, [
      {'text': "Reports Index", "href": '/reports'},
      {"text": page_title}
    ])
  }}
{% endblock %}

{% block content %}
    <h1 class="govuk-heading-xl govuk-!-margin-bottom-3">
        Report: {{ report.name }}
    </h1>
    <span class="govuk-caption-xl govuk-!-margin-bottom-9">Text</span>
    <h2 class="govuk-body">
        {{ report.description|safe }}
    </h2>
    <div>
        <p class="govuk-body">
            Data:
            <ul>
                {% for row in report.data() %}
                    <li>x: {{ row['x'] }}, y: {{ row['y'] }}</li>
                {% endfor %}
            </ul>
        </p>
    </div>
{% endblock %}
